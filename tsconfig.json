{
  "include": ["./src/**/*", "./typings/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "baseUrl": "src/",
    "target": "es2017",
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["dom", "es2017", "es2016", "es2015"]
  }
}
